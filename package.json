{
  "name": "displacement-plugin",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "type-check": "tsc --noEmit --project tsconfig.json",
    "build:ui": "vite build",
    "build:code": "esbuild src/code.ts --bundle --minify --outfile=dist/code.js",
    "build": "npm run type-check && npm run build:ui && npm run build:code",
    "watch:ui": "vite build --watch",
    "watch": "concurrently \"npm:watch:ui\" \"esbuild src/code.ts --outfile=dist/code.js --watch\"",
    "deploy:assets": "node tools/deploy-assets.js",
    "preset:build": "open tools/preset-builder-pro.html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@figma/plugin-typings": "^1.110.0",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/node": "^22.14.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.2",
    "postcss": "^8.5.3",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3",
    "vite": "^6.3.2",
    "vite-plugin-singlefile": "^2.2.0"
  }
}